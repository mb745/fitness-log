---
import { cn } from "@/lib/utils";
import type { Feature } from "@/content/features";

interface Props {
  feature: Feature;
  className?: string;
}

const { feature, className = "" } = Astro.props as Props;
---

<div
  class={cn(
    "group rounded-lg border border-border bg-background p-6 text-center shadow-sm transition-transform hover:-translate-y-1 hover:shadow-md focus-within:outline-none focus-within:ring-2 focus-within:ring-ring",
    className
  )}
>
  <svg
    class="mx-auto mb-4 size-10 text-primary"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="1.5"
  >
    <use href={`#${feature.icon}`}></use>
  </svg>
  <h3 class="mb-2 text-xl font-semibold">{feature.title}</h3>
  <p class="text-muted-foreground">{feature.description}</p>
</div>
