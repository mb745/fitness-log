---
import "../styles/global.css";
import TopMenu from "../components/TopMenu.astro";
import { Toaster } from "../components/ui/toaster";

interface Props {
  title?: string;
  noindex?: boolean;
}

const { title = "10x Astro Starter", noindex = false } = Astro.props;

// User authentication is handled by middleware
// Astro.locals.user is set by middleware and contains user data if authenticated
// Protected pages are already redirected by middleware if user is not authenticated
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {noindex && <meta name="robots" content="noindex" />}
    <title>{title}</title>
  </head>
  <body>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only absolute top-0 left-0 m-2 rounded bg-primary px-3 py-2 text-primary-foreground focus:outline-none focus:ring-2 focus:ring-ring"
      >Przejdź do treści</a
    >
    <main id="main-content" class="px-4 sm:px-6 lg:px-8">
      <!-- Global top navigation -->
      <TopMenu />
      <slot />
    </main>
    <!-- Toast notifications -->
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
